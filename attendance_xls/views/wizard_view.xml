<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model='ir.ui.view' id='wizard_form'>
            <field name="name">wizard.attendance.reporthistory.form</field>
            <field name="model">wizard.attendance.reporthistory</field>
            <field name="arch" type="xml">
                <form string="Wizard">
                        <group string="Attendance Report">
                            <field name="report_type"/>
                            <field name="date_daily" attrs="{'invisible': [('report_type', 'in', ['mr',False])]}"/> <!--shashka-->
                            <field name="date_from" attrs="{'invisible': [('report_type', 'in', ['dr',False])]}"/>
                            <field name="date_to" attrs="{'invisible': [('report_type', 'in', ['dr',False])]}"/>
                            <field name="report_daily" attrs="{'invisible': [('report_type', 'in',[ 'mr',False])]}"/>
                            <field name="report_month" attrs="{'invisible': [('report_type', 'in', ['dr',False])]}"/>
                            <field name="filterby1" />
                            <field name="employee_id" attrs="{'invisible': ['|',('filterby1', 'in', ['dep',False])]}"/>
                            <field name="department_id" attrs="{'invisible': ['|',('filterby1', 'in', ['emp',False])]}"/>
                            
                        </group>
                        <!-- <notebook>
                            <page string="Category">
                                <field name="category">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook> -->
                    <footer>
                        <button name="export_xls" type="object" default_focus="1"
                                string="Export Daily Attendance" class="oe_highlight"
                                context="{'xls_export':1}" icon="fa-download"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record model='ir.actions.act_window' id='wizard_act'>
            <field name="name">Export Attendance Report in Excel</field>
            <field name="res_model">wizard.attendance.reporthistory</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_form"/>
            <field name="target">new</field>
        </record>
        <report
            id="attendances_xlsx_rep"
            model="hr.attendance"
            string=" "
            report_type="xlsx"
            name="attendance_xls.attendance_report_xls.xlsx"
            file="attendance_xls.attendance_report_xls.xlsx"
            attachment_use="False"
        />
        <menuitem name="Attendance Report" parent="hr_attendance.menu_hr_attendance_manage_attendances" id="export_att" action="wizard_act"/>
    </data>
</odoo>